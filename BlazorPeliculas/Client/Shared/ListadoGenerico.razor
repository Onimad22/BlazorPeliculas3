@typeparam Titem
@if (Listado == null)
{
    @if (Cargando == null)
    {
        <text>Cargando...(ListadoPeliculas)</text>
    }
    else
    {
        @Cargando
    }
}
else if (Listado.Count == 0)
{
    @if (NoHayPeliculas == null)
    {
        <text>No hay peliculas que mostrar(ListadoPeliculas)</text>
    }
    else
    {
        @NoHayPeliculas
    }
}
else
{
    foreach(var item in Listado)
    {
        @HayRegistros(item)
    }
}


@code {
    [Parameter] public RenderFragment Cargando { get; set; }
    [Parameter] public RenderFragment NoHayPeliculas { get; set; }
    [Parameter] public List<Titem> Listado{ get; set; }
    [Parameter] public RenderFragment<Titem>HayRegistros{ get; set; }
}
