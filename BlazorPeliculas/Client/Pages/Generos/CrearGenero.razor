@page "/generos/crear"

<h3>CrearGenero</h3>

<EditForm Model="Genero" OnSubmit="Crear">
    <div class="form-group">
        <label>Nombre:</label>
        <div>
        <InputText class="form-control" @bind-Value="@Genero.Nombre" />
        </div>
    </div>

    <button class="btn btn-succes" type="submit">Guardar cambios</button>

</EditForm>


@code {
    private Genero Genero=new Genero();


    private void Crear()
    {
        Console.WriteLine("Ejecutando metodo crear");
        Console.WriteLine($"Creando genero:{Genero.Nombre}");
    }
}
